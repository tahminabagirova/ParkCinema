<body class="dark">

    {{> common/header }}

    {{!-- CAMPAIGN --}}
    <section id="campaigns">
        <div class="contentContainer">
            {{!-- TOP --}}
            <div id="pageFirstStep">
                {{!-- cinemas --}}
                <div class="cinemasItems">
                    <div class="dropDownCinemas">
                        <div class="items-top-footer drop-down-key">
                            <div class="inner-items-top-footer">
                                <p>All cinemas</p>
                                <svg viewBox="0 0 15 8" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" clip-rule="evenodd"
                                        d="M0 1.50416L1.27593 0L7.5 5.39074L13.7241 0L15 1.50416L7.5 8L0 1.50416Z" />
                                </svg>
                            </div>
                        </div>
                        <div class="drop-down-language">
                            <ul class="dropdownUl">
                                <li class="active" data-id="">
                                    Flame Towers
                                </li>
                                <li data-id="">
                                    Park Bulvar
                                </li>
                                <li data-id="">
                                    Metro Park
                                </li>
                                <li data-id="">
                                    Zagulba MAll
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="checkbox-wrapper">
                        <div class="cBox">
                            <div class="form-check all">
                                <input class="form-check-input" type="radio" name="cinemas" id="all" value="all" checked>
                                <label class="form-check-label all" for="all">
                                    <p>ALL</p>
                                </label>
                            </div>
                        </div>

                        <div class="cinemaChecks">
                            <div class="form-check flame-towers">
                                <input class="form-check-input" type="radio" name="cinemas" id="flame-towersS"
                                    value="flame-towers">
                                <label class="form-check-label blue" for="flame-towersS">
                                    FLAME TOWERS
                                </label>
                            </div>

                            <div class="form-check park-bulvar">
                                <input class="form-check-input" type="radio" name="cinemas" id="park-bulvarR"
                                    value="park-bulvar">
                                <label class="form-check-label tomato" for="park-bulvarR">
                                    PARK BULVAR
                                </label>
                            </div>

                            <div class="form-check metro-park">
                                <input class="form-check-input" type="radio" name="cinemas" id="metro-parkK"
                                    value="metro-park">
                                <label class="form-check-label green" for="metro-parkK">
                                    METRO PARK
                                </label>
                            </div>

                            <div class="form-check zagulba-mall">
                                <input class="form-check-input" type="radio" name="cinemas" id="zagulba-mallL"
                                    value="zagulba-mall">
                                <label class="form-check-label orange" for="zagulba-mallL">
                                    ZAGULBA MALL
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                {{!-- filter category --}}
                <div class="categoryFilter">
                    <div id="sessionInner" class="sessionInner">
                        <div class="cBox">
                            <div class="form-check all">
                                <input class="form-check-input" type="radio" name="movie-date" id="aLL" value="4" checked>
                                <label class="form-check-label all" for="aLL">
                                    <p>ALL</p>
                                </label>
                            </div>
                        </div>
                        <div class="sessionBar desk-version">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="movie-date" id="permanet" value="4">
                                <label class="form-check-label" for="permanet">
                                    <p>PERMANET</p>
                                </label>
                            </div>

                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="movie-date" id="temporary" value="5">
                                <label class="form-check-label" for="temporary">
                                    <p>TEMPORARY</p>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{!-- INNER --}}
            <div class="campaignsInner">
                <h1 class="pageTitle">Campaings</h1>
                <div class="cards">
                    {{> section/campaigns-card}}
